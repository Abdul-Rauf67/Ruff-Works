<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.Fragments.UserAccount.UserAccountFragment"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.AgriLinkUp.AppBarOverlay"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:gravity="center"
                    app:titleTextColor="@color/white"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:title="AgriLinkUp" />
            </com.google.android.material.appbar.AppBarLayout>


            <ScrollView
                android:id="@+id/scrollView3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_30sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

                    <TextView
                        android:id="@+id/Profile"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="left|center"
                        android:layout_width="match_parent"
                        android:text="My Profile"
                        android:textSize="@dimen/_18sdp"
                        android:layout_height="60dp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="0dp" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/green"
                        app:layout_constraintTop_toBottomOf="@+id/Profile" />

                    <TextView
                        android:id="@+id/myOrders"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="left|center"
                        android:text="My Orders"
                        android:textSize="@dimen/_18sdp"
                        app:layout_constraintTop_toBottomOf="@+id/view"
                        tools:layout_editor_absoluteX="0dp" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/green"
                        app:layout_constraintTop_toBottomOf="@+id/myOrders" />

                    <TextView
                        android:id="@+id/myProducts"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="left|center"
                        android:text="My Products"
                        android:textSize="@dimen/_18sdp"
                        app:layout_constraintTop_toBottomOf="@+id/view2"
                        tools:layout_editor_absoluteX="0dp" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/green"
                        app:layout_constraintTop_toBottomOf="@+id/myProducts" />


                    <TextView
                        android:id="@+id/addProduct"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="left|center"
                        android:text="Sell a Product"
                        android:textSize="@dimen/_18sdp"
                        app:layout_constraintTop_toBottomOf="@+id/view3"
                        tools:layout_editor_absoluteX="0dp" />

                    <View
                        android:id="@+id/view13"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/green"
                        app:layout_constraintTop_toBottomOf="@+id/addProduct" />

                    <TextView
                        android:id="@+id/updateProfile"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="left|center"
                        android:text="Update Profile"
                        android:textSize="@dimen/_18sdp"
                        app:layout_constraintTop_toBottomOf="@+id/view13"
                        tools:layout_editor_absoluteX="0dp" />

                    <View
                        android:id="@+id/view12"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/green"
                        app:layout_constraintTop_toBottomOf="@+id/updateProfile" />


                    <TextView
                        android:id="@+id/logoutAccount"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="left|center"
                        android:text="Logout"
                        android:textSize="@dimen/_18sdp"
                        app:layout_constraintTop_toBottomOf="@+id/view12"
                        tools:layout_editor_absoluteX="0dp" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/green"
                        app:layout_constraintTop_toBottomOf="@+id/logoutAccount" />


                    <TextView
                        android:id="@+id/about_Us"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="left|center"
                        android:text="About Us"
                        android:textSize="@dimen/_18sdp"
                        app:layout_constraintTop_toBottomOf="@+id/view4"
                        tools:layout_editor_absoluteX="0dp" />

                    <View
                        android:id="@+id/view31"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/green"
                        app:layout_constraintTop_toBottomOf="@+id/about_Us" />

                    <TextView
                        android:id="@+id/contact_US"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="left|center"
                        android:text="Contact Us"
                        android:textSize="@dimen/_18sdp"
                        app:layout_constraintTop_toBottomOf="@+id/view31"
                        tools:layout_editor_absoluteX="0dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/green"
                        app:layout_constraintTop_toBottomOf="@+id/contact_US"
                        />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>
</layout>