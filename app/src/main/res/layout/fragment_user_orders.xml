<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<data>

</data>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.UserAccount.UserOrdersFragment">

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.AgriLinkUp.AppBarOverlay"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:title="AgriLinkUp" />
        </com.google.android.material.appbar.AppBarLayout>


        <ScrollView
            android:id="@+id/scrollView4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

                <TextView
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="left|center"
                    android:id="@+id/pendingOrders"
                    android:layout_width="match_parent"
                    android:text="Pending Orders"
                    android:textSize="@dimen/_18sdp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/green"
                    app:layout_constraintTop_toBottomOf="@+id/pendingOrders" />

                <TextView
                    android:id="@+id/processingOrders"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="left|center"
                    android:text="Processing Orders"
                    android:textSize="@dimen/_18sdp"
                    app:layout_constraintTop_toBottomOf="@+id/view"
                    tools:layout_editor_absoluteX="0dp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/green"
                    app:layout_constraintTop_toBottomOf="@+id/processingOrders" />

                <TextView
                    android:id="@+id/approvedOrders"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="left|center"
                    android:text="Approved Orders"
                    android:textSize="@dimen/_18sdp"
                    app:layout_constraintTop_toBottomOf="@+id/view2"
                    tools:layout_editor_absoluteX="0dp" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/green"
                    app:layout_constraintTop_toBottomOf="@+id/approvedOrders" />

                <TextView
                    android:id="@+id/cancelledOrders"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="left|center"
                    android:text="Cancelled Orders"
                    android:textSize="@dimen/_18sdp"
                    app:layout_constraintTop_toBottomOf="@+id/view3"
                    tools:layout_editor_absoluteX="0dp" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/green"
                    app:layout_constraintTop_toBottomOf="@+id/cancelledOrders" />




            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
</layout>