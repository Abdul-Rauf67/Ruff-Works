<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <me.jagar.chatvoiceplayerlibrary.VoicePlayerView
            android:id="@+id/voicePlayerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:enableVisualizer="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:playPauseBackgroundColor="@color/primary_color"
            app:playPauseCornerRadius="100"
            app:playProgressbarColor="@color/primary_color"
            app:progressTimeColor="#000"
            app:seekBarProgressColor="@color/primary_color"
            app:seekBarThumbColor="@color/primary_color"
            app:shareCornerRadius="100"
            app:showShareButton="false"
            app:showTiming="true"
            app:timingBackgroundColor="#6AD68844"
            app:viewBackground="@color/trackBgColor"
            app:viewCornerRadius="100"
            app:visualizationNotPlayedColor="#727171"
            app:visualizationPlayedColor="@color/primary_color" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>