<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CartFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            >

            <include
                android:id="@+id/item1"
                layout="@layout/product_listing_items_at_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <include
            android:id="@+id/item2"
            layout="@layout/product_listing_items_at_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/item1"
            tools:layout_editor_absoluteX="15dp" />
        <include
            android:id="@+id/item3"
            layout="@layout/product_listing_items_at_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/item2"
            tools:layout_editor_absoluteX="15dp" />
        <include
            android:id="@+id/item4"
            layout="@layout/product_listing_items_at_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/item3"
            tools:layout_editor_absoluteX="15dp" />
        <include
            android:id="@+id/item5"
            layout="@layout/product_listing_items_at_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/item4"
            tools:layout_editor_absoluteX="15dp" />
        <include
            android:id="@+id/item6"
            layout="@layout/product_listing_items_at_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/item5"
            tools:layout_editor_absoluteX="15dp" />
        <include
            android:id="@+id/item7"
            layout="@layout/product_listing_items_at_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/item6"
            tools:layout_editor_absoluteX="15dp" />
        <include
            android:id="@+id/item8"
            layout="@layout/product_listing_items_at_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/item7"
            tools:layout_editor_absoluteX="15dp" />



            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_products_listings"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/baseline_add_24" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>